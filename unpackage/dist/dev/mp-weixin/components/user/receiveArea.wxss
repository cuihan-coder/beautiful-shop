
.receive-container {
}
.receive-container .title {
	padding: 40rpx;
	color: #000000;
	font-size: 50rpx;
	font-weight: bold;
}
.area-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 20rpx;
	-webkit-border-radius: 24rpx;
	        border-radius: 24rpx;
	background: #ffffff;
	margin-top: 30rpx;
}
.receive-container .active {
	opacity: 0.5;
}
.area-item-left {
	padding-right: 30rpx;
}
.area-item-left .name-phone {
	color: #333333;
}
.area-item-left .name-phone text:nth-child(1) {
	font-size: 40rpx;
	font-weight: bold;
}
.area-item-left .name-phone text:nth-child(2) {
	font-size: 38rpx;
	font-weight: bold;
	padding-left: 40rpx;
}
.area-item-left .area {
	color: #999999;
	font-size: 30rpx;
	padding-top: 10rpx;
}
.area-item-right {
	width: 120rpx;
	line-height: 50rpx;
	text-align: center;
	border-left: 1rpx solid #cccccc;
	color: #999999;
	font-size: 27rpx;
}
.receive-add-area {
	width: 50%;
	line-height: 90rpx;
	position: fixed;
	bottom: 45rpx;
	left: 25%;
	text-align: center;
	background: #ffcf4f;
	-webkit-border-radius: 50rpx;
	        border-radius: 50rpx;
	color: #333333;
	font-size: 33rpx;
	-webkit-box-shadow: 6rpx 1rpx 26rpx #fce6b0;
	        box-shadow: 6rpx 1rpx 26rpx #fce6b0;
}

