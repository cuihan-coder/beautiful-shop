}
.my-zhangben {
	position: relative;
	top: -150rpx;
	width: 90%;
	padding: 40rpx 0;
	margin: 0 auto;
	background-color: #fff;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
	-webkit-box-shadow: 0 0 20rpx #d3d3d3;
	        box-shadow: 0 0 20rpx #d3d3d3;
	text-align: center;
}
.my-zhangben > view:nth-child(1) > text:nth-child(1) {
	font-size: 30rpx;
	color: #666;
}
.my-zhangben > view:nth-child(2) > text:nth-child(1) {
	padding-right: 20rpx;
	font-size: 60rpx;
	font-weight: bold;
	color: #000;
}
.my-zhangben > view:nth-child(2) > text:nth-child(1)::before {
	content: '¥';
