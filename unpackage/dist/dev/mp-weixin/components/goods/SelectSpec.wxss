
.selectspec-container {
}
.selectspec-container .title {
	padding: 40rpx;
	color: #000000;
	font-size: 50rpx;
	font-weight: bold;
}
.selectspec-dxsm {
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding-left: 30rpx;
	color: #999999;
	font-size: 26rpx;
}
.selectspec-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background: #f7f7f7;
	margin-top: 20rpx;
	padding: 52rpx 30rpx;
	-webkit-border-radius: 30rpx;
	        border-radius: 30rpx;
	color: #333333;
	font-size: 30rpx;
	font-weight: bold;
}
.selectspec-active {
	background-image: url(http://zzsc.com/static/xcx/btn_sele.png);
	background-position: right 30rpx center;
	background-size: 50rpx 50rpx;
	background-repeat: no-repeat;
	background-color: #fff2d1;
	border: 1rpx solid #ffcf4f;
}
.selectspec-item text:nth-child(1) {
	padding-right: 60rpx;
	width: 55%;
	display: inline-block;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.selectspec-footer-btn {
	width: 100%;
	position: fixed;
	bottom: 24rpx;
	left: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.selectspec-footer-btn .circle {
	width: 100rpx;
	height: 100rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	-webkit-box-shadow: 0rpx 0rpx 30rpx #f1f1f1;
	        box-shadow: 0rpx 0rpx 30rpx #f1f1f1;
	background: #ffffff;
}
.selectspec-card {
	width: 250rpx;
	line-height: 80rpx;
	background: #ffffff;
	-webkit-box-shadow: 0 0 30rpx #f1f1f1;
	        box-shadow: 0 0 30rpx #f1f1f1;
	text-align: center;
	-webkit-border-radius: 96rpx;
	        border-radius: 96rpx;
	color: #333333;
	font-size: 35rpx;
}
.selectspec-item-price view:nth-child(2) {
	color: #b0b0b0;
	font-size: 23rpx;
}
