
page {
	background: #edfcff;
}
.mycreatevoucher-container {
	padding: 30rpx;
}
.mycreatevoucher-container > .title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.mycreatevoucher-container > .title > text {
	font-size: 50rpx;
	font-weight: 500;
	color: #333333;
}
.mycreatevoucher-container > .detail {
	margin-top: 20rpx;
	font-size: 34rpx;
	color: #333333;
}
.mycreatevoucher-container > .detail > navigator {
	color: #576b95;
	text-decoration: underline;
}
.btn-fixed{
	width: 100%;
	position: fixed;
	left: 0;
	bottom: 50rpx;
	text-align: center;
}
.coupon-item{
	margin-top: 20rpx;
	padding: 20rpx;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	background: #ffffff;
	-webkit-box-shadow: 0 0 20rpx #D6E7F2;
	        box-shadow: 0 0 20rpx #D6E7F2;
}
.coupon-item .left > view:nth-child(1){
	padding-bottom: 10rpx;
	font-size: 30rpx;
	color: #333333;
}
.coupon-item .left > view:nth-child(2),
 .coupon-item  .left > view:nth-child(3){
	font-size: 22rpx;
	color: #AFAFAF;
}
.buynum  text:nth-child(2n+1){
	font-size: 22rpx;
	color: #AFAFAF;
}
.buynum  text:nth-child(2n+2){
	font-size: 26rpx;
	color: #333333;
}
.coupon-item .right{
	width: 30%;
	border-left:1rpx dashed #999999;
	text-align: center;
}
.coupon-item .right  > view:nth-child(1){
	font-size: 40rpx;
	font-weight: bold;
	color: #DD5A17;
}
