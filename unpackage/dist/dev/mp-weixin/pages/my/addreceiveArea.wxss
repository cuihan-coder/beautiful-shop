
.addreceiveArea-container {
	width: 94%;
	background: #f7f7f7;
	margin: 0 auto;
	-webkit-border-radius: 12rpx;
	        border-radius: 12rpx;
}
.addreceiveArea-container :last-child{
	border-bottom: 0;
}
.addreceiveArea-input {
	padding: 20rpx;
	border-bottom: 1rpx solid #e6e6e6;
}
.addreceiveArea-input view:nth-child(1) {
	color: #999999;
	font-size: 30rpx;
}
.addreceiveArea-input input {
	margin-top: 14rpx;
	color: #000000;
	font-size: 30rpx;
}
.addreceiveArea-input-area{
	padding: 20rpx;
}
.addreceiveArea-input-area view:nth-child(1) {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color: #999999;
	font-size: 30rpx;
}
.addreceiveArea-input-area input {
	margin-top: 14rpx;
	color: #000000;
	font-size: 30rpx;
}
.addreceiveArea-input-area .dingwei-btn{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color: #586B95;
}
.addreceiveArea-add-area {
	width: 50%;
	line-height: 90rpx;
	position: fixed;
	bottom: 45rpx;
	left: 25%;
	text-align: center;
	background: #ffcf4f;
	-webkit-border-radius: 50rpx;
	        border-radius: 50rpx;
	color: #333333;
	font-size: 33rpx;
	-webkit-box-shadow: 6rpx 1rpx 26rpx #fce6b0;
	        box-shadow: 6rpx 1rpx 26rpx #fce6b0;
}

