
page {
	background-color: #f7f7f7;
}
.cardtoorder-back {
	width: 100%;
	height: 100rpx;
	background: #ffcf4f;
}
.cardtoorder-addrea {
	width: 92%;
	height: 120rpx;
	margin: -60rpx auto 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-border-radius: 30rpx;
	        border-radius: 30rpx;
	background: #ffffff;
	color: #000000;
	font-size: 30rpx;
}
.cardtoorder-cardlist {
	width: calc(92% - 60rpx);
	margin: 0 auto;
	padding: 30rpx;
	-webkit-border-radius: 30rpx;
	        border-radius: 30rpx;
	background: #ffffff;
	margin-top: 30rpx;
}
.cardtoorder-goods-item {
	margin-bottom: 70rpx;
}
.cardtoorder-cardlist :last-child {
	margin-bottom: 0;
}
.cardtoorder-goods-item .item-top {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.cardtoorder-goods-item .item-top-name view:nth-child(1) {
	color: #333333;
	font-size: 34rpx;
	font-weight: bold;
}
.cardtoorder-goods-item .item-top-name view:nth-child(2) {
	color: #999999;
	font-size: 30rpx;
	padding-top: 10rpx;
}
.cardtoorder-goods-item image {
	width: 90rpx;
	height: 90rpx;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
}
.cardtoorder-goods-item .item-price {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.cardtoorder-goods-item .item-price text:nth-child(1) {
	color: #999999;
	font-size: 30rpx;
}
.cardtoorder-goods-item .item-price text:nth-child(2) {
	color: #333333;
	font-size: 48rpx;
	font-weight: bold;
}
.cardtoorder-goods-item .item-note {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	margin-top: 20rpx;
	color: #666666;
	font-size: 30rpx;
}
.cardtoorder-goods-item .item-note input {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	color: #000000;
	font-size: 30rpx;
}
.cardtoorder-check {
	margin-top: 30rpx;
	padding-left: 66rpx;
	color: #666666;
	font-size: 29rpx;
}
.van-radio__label {
	color: #666666;
	font-size: 30rpx !important;
}
.cardtoorder-pay-footer {
	width: 100%;
	height: 160rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	position: fixed;
	bottom: 0;
	left: 0;
	background: #ffffff;
	z-index: 10;
}
.cardtoorder-pay-btn {
	width: 50%;
	line-height: 89rpx;
	-webkit-border-radius: 50rpx;
	        border-radius: 50rpx;
	background: #ffcf4f;
	text-align: center;
}
.cardtoorder-pay-btn text:nth-child(1) {
	color: #333333;
	font-size: 34rpx;
	padding-right: 20rpx;
}
.cardtoorder-pay-btn text:nth-child(2) {
	color: #333333;
	font-size: 30rpx;
}

